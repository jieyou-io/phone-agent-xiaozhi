<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubbleContainer"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:background="@drawable/bubble_background"
    android:elevation="8dp">

    <!-- 空闲状态: 灰色圆点背景 + 图标 -->
    <ImageView
        android:id="@+id/idleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble_idle"
        android:src="@drawable/ic_robot"
        android:padding="12dp"
        android:visibility="visible"
        android:contentDescription="@string/status_idle" />

    <!-- 监听状态: 红色脉冲圆点 + 麦克风图标 -->
    <ImageView
        android:id="@+id/listeningView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble_listening"
        android:src="@drawable/ic_mic"
        android:padding="12dp"
        android:visibility="gone"
        android:contentDescription="@string/status_listening" />

    <!-- 思考状态: 旋转进度条 + 图标 -->
    <FrameLayout
        android:id="@+id/thinkingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble_thinking"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/thinkingSpinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:indeterminateTint="@android:color/white" />
    </FrameLayout>

    <!-- 执行状态: 绿色背景 + 进度动画 -->
    <FrameLayout
        android:id="@+id/executingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble_executing"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/executingProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:indeterminateTint="@android:color/white" />
    </FrameLayout>

</FrameLayout>
